<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqbo.web.mapper.system.MenuMapper">
    <resultMap id="BaseResultMap" type="com.cqbo.web.model.entity.system.Menu">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="parentId" column="parentId" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="locale" column="locale" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="visiable" column="visiable" jdbcType="TINYINT"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="parentName" column="parentName" jdbcType="VARCHAR"/>
        <result property="orderNum" column="orderNum" jdbcType="INTEGER"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,parentId,title,code,name,path,url,locale,type,visiable,icon,parentName,orderNum,createTime,updateTime
    </sql>

    <select id="getMenuByUserId" resultType="com.cqbo.web.model.entity.system.Menu">
        select DISTINCT m.*
        from sys_user_role as ur
                 left join sys_role as r on ur.roleId = r.id
                 left join sys_role_menu as rm on r.id = rm.roleId
                 left join sys_menu as m on rm.menuId = m.id
        where ur.userId = #{userId}
        order by m.orderNum desc
    </select>

    <select id="getMenuByRoleId" resultType="com.cqbo.web.model.entity.system.Menu">
        select m.*
        from sys_role_menu as rm,
             sys_menu as m
        where rm.menuId = m.id
          and rm.roleId = #{roleId}
    </select>

</mapper>
